<h2>Albums</h2>
<div class="col s12">
  <div class="row">
    {{#each items as |album|}}
    <div class="col s3 m3">
      <div class="card">
        <div class="card-image">
          <img src="{{album.images.[0].url}}" alt="{{album.name}}">
          <a href="/tracks/{{album.id}}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
          <span class="card-title">{{album.name}}</span>
          <p>{{album.artists.[0].name}}</p><br>
          <p>
            <a href="/tracks/{{album.id}}" class="waves-effect waves-light btn black">View tracks</a>
          </p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>