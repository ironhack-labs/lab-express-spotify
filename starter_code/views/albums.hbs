<div class="container">
    <div class="title">
        <h1>Albums</h1>
    </div>
    <div class="row">
        {{#each items}}
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.images.[0].url}}" alt="Tracks">
                <div class="card-body">
                    <div class="info">
                        <div class="name"><h2>{{this.name}}</h2></div>
                        <a href="/tracks/{{this.id}}">
                            <button type="submit" class="btn btn-danger">View tracks</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>