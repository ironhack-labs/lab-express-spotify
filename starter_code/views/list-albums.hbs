<h1>Albums for: {{artistName}}</h1>

<div class="gallery">
  {{#each albums}}
  <div class="card">
    {{#if this.images.[0]}}
    <img src="{{this.images.[0].url}}" alt="" class="card__img">
    {{else}}
    <img src="/img/default-artist.png" alt="" class="card__img">
    {{/if}}
    <h3 class="card__title">{{this.name}}</h3>
    <div>
        {{!-- same thing we did with albums, but now with tracks --}}
      <a class="button" href="/tracks/{{this.id}}">View Tracks</a>
    </div>
  </div>
  {{/each}}
</div>