<div class="all-height d-flex flex-wrap align-items-center
  justify-content-center">
  {{#each artists}}
  <div class="card d-flex flex-column align-items-center
    justify-content-center">
    <img src="{{this.images.0.url}}" alt="Card image cap">
    <div class="card-body d-flex flex-column align-items-center
      justify-content-center">
      <h5 class="card-title">{{this.name}}</h5>
      <a class="btn btn-danger" role="button" href="/albums/{{this.id}}">View Albums</a>
    </div>
  </div>
  {{/each}}

</div>