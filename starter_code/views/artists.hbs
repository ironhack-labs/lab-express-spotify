<section id='artists-page'>
    <div class='header'>
        <div class='nav-bar'>
            <a href='/' class='nav-link'>Search another artist</a>
        </div>
        <div class='page-header'>
            <h1>Artists found for: '{{search}}'</h1> 
        </div>
    </div>
    <div id='artists-container'>
            {{#each artists.items}}
                <div class='artist'>
                    {{#if this.images.0.url}}
                        <img src='{{this.images.0.url}}' alt="" class='artist-img'> 
                    {{else}}
                        <img src='https://owips.com/sites/default/files/clipart/music-icons/266404/music-icons-art-266404-5912032.png' alt='' class='artist-img'>
                    {{/if}}
                    <div class='name-box'>
                        <h3 class='artist-name'>{{this.name}}</h3> 
                        <a href="/artist/{{this.id}}" class='albums-btn'>View Albums</a>
                    </div>
                </div>
            {{/each}}
    </div>
</section>

