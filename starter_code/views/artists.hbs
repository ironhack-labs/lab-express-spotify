<div class="container">
  <div class="row">
    {{#each artists as |artist|}}
      <div class="col-lg-4 artist-container">
        {{#if artist.images.0.url}}
          <img src="{{artist.images.0.url}}" alt="{{artist.name}}">
        {{else}}
          <img src="http://www.designshock.com/wp-content/uploads/2016/04/man-4-400.jpg" alt="{{artist.name}}">
        {{/if}}
        <div class="info">
          <p> {{artist.name}} </p>
          <a href="/artists/{{artist.id}}">View Albums</a>
        </div>
      </div>
    {{/each}}	
  </div>
</div>