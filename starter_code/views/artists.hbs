<div class="container">
    <div class="row">
        {{#each artists}}
        <div class="col-lg-4 artist-container">
            <div class="image-container">
                {{#if images}}
                {{#each images}}
                {{#if @first}}
                <img src="{{url}}" alt="{{name}}" class="artist-img">
                {{/if}}
                {{/each}}
                {{else}}
                <img src="/images/placeholder-image.jpg" alt="{{name}}" class="artist-img">
                {{/if}}
            </div>
            <div class="artist-info-container">
                <p>{{name}}</p>
                <a href="/albums/{{ id }}">View Albums</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>