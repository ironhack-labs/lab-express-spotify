<h2>You searched for "{{search}}"</h2>

{{!--
<pre>{{JSON}}</pre> --}}

<div class="d-flex flex-wrap">
  {{#each artists}}
  <div class="block d-flex flex-column justify-content-around align-items-center">
    <h6>{{name}}</h6>
    {{#if images.[0]}}
    <img src="{{images.[0].url}}" alt="">
    {{else}}
    <img src="/images/default-artist.png" alt="">
    {{/if}}
    <a href="/albums/{{id}}">View Albums</a><br>
  </div>
  {{else}}
  <div>Sorry, no artists for your search</div>
  {{/each}}
</div>