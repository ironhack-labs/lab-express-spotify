          <button>
            <a href=<%="/tracks/"+albumInfo[2].id%>>View Tracks</a>
          </button>
        </figcaption>
      </figure>
      <figure class="album-box">
        <% if (albumInfo[4].images.length>0){ %>
          <img src=<%=albumInfo[4].images[0].url%>>
        <%} else { %>
          <img src="images/noImage.png">
        <% } %>
        <figcaption><%=albumInfo[4].name%><br>
          <button>
            <a href=<%="/tracks/"+albumInfo[4].id%>>View Tracks</a>
          </button>
        </figcaption>
      </figure>
    </div>
  </body>
</html>  