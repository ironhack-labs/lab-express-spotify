<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>

    <div class="background">
      

      <form
        class="formulario row row-cols-lg-auto g-3 align-items-center"
        action="/artist-search"
        method="GET"
      >
        <div class="col-12">
          <label
            class="visually-hidden"
            for="inlineFormInputGroupUsername"
          >Search the artist</label>
          <div class="input-group">
            <input
              name="artists"
              type="text"
              class="form-control"
              id="inlineFormInputGroupUsername"
              placeholder="Search the artist"
            />
          </div>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">
            Search for a Artist</button>
        </div>
      </form>
    </div>
  </body>
</html>