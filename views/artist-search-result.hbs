<div class="artist-container">
    <div class="box">


        {{#each results}}

        <div class="card-box">

            <div class="card-img">
                <img src="{{this.images.[0].url}}" alt="">

            </div>
            <div class="card-content">
                <h2 class="card-title">{{this.name}}</h2>
                <a class="btn-album" href="/albums/{{id}}">View Albums</a>
            </div>
        </div>
        {{/each}}


    </div>
</div>