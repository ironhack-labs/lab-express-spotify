{{>navbar}}

<div class="container" style="margin-top:20px">
<h2 class="text-start" style="font-size: 7.5em; color:#26d767;">Artist search</h2>
<div class="row gy-4 g-1" style="margin-top:20px">
    {{#each artists}}
        <div class="col-3 d-flex justify-content-between">
            <div class="card text-bg-dark border-secondary" style="width: 16rem;" >
                <img src="{{this.images.2.url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <a href="/albums/{{id}}" class="btn btn-primary" type="submit" name="artistId">View albums</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>
</div>