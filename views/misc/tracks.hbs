{{>navbar}}

<div class="container" style="margin-top:20px">
    <h2 style="font-size: 7.5em; color:#26d767;">Tracks</h2>
        <table class="table table-dark table-hover" style="margin-top:40px">
            <thead>
                <tr>
                    <th scope="col" class="table-dark fs-3 align-middle">Title</th>
                    <th class="text-end table-dark fs-3 align-middle" scope="col">Let's hear it!</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each tracks as | track |}}
                    <tr>
                        <td class="p-2 flex-grow-1 align-middle">{{track.name}}</td>
                        <td class="d-flex justify-content-end">
                            <audio controls>
                                <source src="{{track.preview_url}}" type="audio/mpeg">
                            </audio>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
</div>