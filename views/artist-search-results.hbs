        {{#each artists}}

        <h2>{{name}}</h2>

        <img src="{{images.0.url}}" width="200px" alt="Picture of an artist">
        <button><a href="/albums/{{ id }}">View Albums</a></button>
        {{/each}}
    </div>
</div>