<div>
     <h1>Artist Search Results</h1>
  {{#if artists.length}}
    <ul>
      {{#each artists}}
        <li>
          <h2>{{name}}</h2>
          {{#if images.length}}
            <img src={{images.[0].url}} alt={{name}} Image>
          {{else}}
            <p>No image available</p>
          {{/if}}
          <a href="/artist-albums/{{id}}">View Albums</a> 
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No artists found for the search term.</p>
  {{/if}}
</body> 
</div>