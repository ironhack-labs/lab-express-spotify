<div class="container">
  <div class="row">
    {{#each artistInfo}}
      <div class="col-4 p-3">
        <a href="/albums/{{id}}" class="button"><img
            src="{{images.0.url}}"
            alt="{{name}}"
            width="100%"
          /></a>

        <h3 class="title"><a
            href="/albums/{{id}}"
            class="button"
          >{{name}}</a></h3>
        <a href="/albums/{{id}}" class="button">View Albums
        </a>
      </div>
    {{/each}}
  </div>
</div>
<style>
  .title a { 
      text-decoration: none; 
      color: black;
  }
</style>