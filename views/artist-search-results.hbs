<div class="artist-container">
	{{#each artists}}
	<div class="card-artist">
		{{#if images}}
			<img src="{{images.[0].url}}" alt="{{name}}">
		{{else}}
			<img src="images/no-image.jpeg" alt="no image available">
		{{/if}}
			<p>{{name}}</p>
			<a href="/albums/{{id}}">View Albums</a>
		</div>
	{{/each}}
</div>