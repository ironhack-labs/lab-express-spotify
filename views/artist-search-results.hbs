<link rel="stylesheet" href="/styles/artist-albums.css" />

{{#each artistArr}}
  <div class="box">
    {{#if this.images}}
      <img src="{{this.images.0.url}}" alt="Image not Found" />
      {{else}}
        <img src="/images/Image_not_available.png" alt="Image not Found" />
    {{/if}}
    <div class="boxInfo">
      <h1>{{this.name}}</h1>
      <form action="/albums/{{this.id}}">
        <input class="button" type="submit" value="View Albums" />
      </form>
      {{!-- <button class="button" onclick="/albums/{{this.id}}" type="button">View Albums</button> --}}
      {{!-- <button class="button" type="button">
        <a href="/albums/{{this.id}}">View Albums</a>
      </button> --}}
    </div>
  </div>
{{else}}
  <h2>Artist not found</h2>
{{/each}}