<div class="container">
  <div class="row text-center">
    {{#each artist}}
      <div class="card" style="width: 23rem;">
        <img src="{{images.0.url}}" class="card-img-top" alt="{{name}}" />
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <a href="/albums/{{id}}" class="btn btn-primary">Albums</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>