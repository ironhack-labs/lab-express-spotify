<h2>Search Results:</h2>

<div class="container">
    {{#if artists}}
    
    {{#each artists}}
    <div class="result" >
        
        <div>
            <h3>{{name}}</h3>
        </div>
        <img src={{images.[1].url}} alt="Artist Image">
        <button class="button" id="album-button">
            <a class="button" href="/albums/{{id}}">View Albums</a>
        </button>
    </div>

    {{/each}}

     <h3>Sorry, no results found</h3>
    
    {{/if}}
</div>