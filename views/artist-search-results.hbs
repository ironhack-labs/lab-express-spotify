<section class="result">
    {{#each data}}
        <div class = 'container'>
            {{#if this.images.[1].url}}
                <img src="{{this.images.[1].url}}" alt="artist-image">
            {{else if this.images.[2].url}} 
                <img src="{{this.images.[2].url}}" alt="artist-image">
            {{else if this.images.[0].url}}
                <img src="{{this.images.[0].url}}" alt="artist-image">
            {{else}}
                <p class = "no-image">No fancy photo here? ☹️</p>
            {{/if}}
            <h1 class ="name">{{this.name}}</h1>
            <button class ="albums-button">
                <a href="/albums/{{this.id}}">New Albums</a>
            </button>
        </div>
    {{/each}}
</section>
