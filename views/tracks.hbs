<!-- tracks.hbs -->

<h1>Tracks</h1>

{{#if tracks.length}}
  <ul>
    {{#each tracks}}
      <li>
        <h2>{{name}}</h2>
        <p>Preview:
          <audio controls><source
              src="{{preview_url}}"
              type="audio/mp3"
            /></audio></p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No tracks found for this album</p>
{{/if}}