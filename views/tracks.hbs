<table class="uk-table uk-table-hover uk-table-divider">
    <thead>
        <tr>
            <th>Title</th>
            <th>Listen</th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td>{{name}}</td>
            <td>
                {{#if preview_url}}
                    <audio controls src="{{preview_url}}">Audio controls not supported
                    </audio>
                {{else}}
                    There is no preview :/
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>