<div class="container">
    <h1>{{album.name}} by {{tracks.[0].artists.[0].name}}</h1>
    <div id="tracks-list">
        {{#each tracks}}
        <div class="track">
            <h2>{{this.name}}</h2>
            <div class="audio-control">
                <audio controls>
                    <source src="{{this.preview_url}}" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            </div>
        </div>
        {{/each}}
    </div>
</div>