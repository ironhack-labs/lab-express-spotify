<!-- layout.hbs -->
<div class="container">
  {{#each trackData}}
  <div class="row header-row">
    <span class="col-lg-8">Tittle</span>
    <span class="col-lg-4">Listen</span>
  </div>

  <div class="row track-item">
    <div class="col-lg-8">
      <p>{{this.name}}</p>
    </div>
    <div class="col-lg-4">
      <audio controls="" name="media">
        <source src="{{this.preview_url}}" type="audio/mp3">
      </audio>
    </div>
  </div>
  {{/each}}
</div>