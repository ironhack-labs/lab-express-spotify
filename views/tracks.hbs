<ul class="track-list">
  {{#each tracks}}
    <li class="track-item">
      <h4>{{this.name}}</h4>
      <br />
      {{#if this.preview_url}}
        <audio controls>
          <source src="{{this.preview_url}}" type="audio/mpeg" />
          Your browser does not support the audio tag.
        </audio>
      {{else}}
        <p class="no-preview"><b>No preview available! Sorry!</b></p>
      {{/if}}
    </li>
  {{/each}}
</ul>