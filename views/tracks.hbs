<table class="tracks" cellspacing="0">
  <tbody>
    <tr class="tableheader">
      <th class="title">Title</th>
      <th class="listen">Listen</th>
    </tr>
    {{#each albumTracks}}
    <tr class="track">
      <td>{{this.name}}</td>
      {{#if this.preview_url}}
      <td><audio controls src="{{this.preview_url}}">
          Your browser does not support the
          <code>audio</code> element.
        </audio></td>
      {{else}}
      <td>
        <p>preview not available</p>
      </td>
    </tr>
    {{/if}}
    {{/each}}
  </tbody>
</table>