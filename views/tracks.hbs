<div class="container">
	<div class="col">
		<h1>Tracks for: {{query}}</h1>
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th>Title</th>
					<th>Listen</th>
				</tr>
			</thead>
			<tbody>
				{{#each tracks}}
				<tr>
					<td>{{name}}</td>
					<td>
						<audio controls src="{{preview_url}}"></audio>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>