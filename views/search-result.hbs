<div class="container ">
    <div class="row">
        {{#each artists}}
        <div class="col-md-4 mt-3">
            <div class="card" style="width: 18rem;">
                <img src='{{images.[0].url}}' class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <a href="/albums/{{id}}" class="btn btn-primary">View albums</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>