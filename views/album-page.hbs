<main class='container'>
  <div class='row'>
    {{#each items}}

      <div class='card' style='width: 18rem;'>

        {{#if images.0.url}}
          <img src='{{images.0.url}}' class='card-img-top' alt='album' />
        {{else}}
          <img src='./images/not_found.jpeg' class='card-img-top' alt='album' />

        {{/if}}
        <div class='card-body'>
          <h5 class='card-title'>{{name}}</h5>
          <a href='/tracks/{{id}}' class='btn btn-primary'>View tracks</a>
        </div>
      </div>

    {{/each}}

  </div>
</main>