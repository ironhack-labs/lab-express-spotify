<h1 class='album-header'>Albums for: 

    {{#each albums.0.artists}}
        {{this.name}}
    {{/each}}

</h1>
{{#each albums}}

<div class="card" style="width: 18rem;">
    <div class="img-panel">
        <img src="{{this.images.0.url}}" class="card-img-top" alt="...">
    </div>
    <div class="card-body" style="background-color: grey">
        <h5 class="card-title" style="color: white">{{this.name}}</h5>
        <a href="/album-tracks/{{this.id}}">
            <button type="button" class="btn btn-danger">View Tracks</button>
        </a>
    </div>
</div>

{{/each}}