<html>
  <body>
    <h1>Albums by {{artistName}}</h1>
    {{#each albums}}
      <div>
        <h2>{{name}}</h2>
        <img src="{{images.[0].url}}" alt="{{name}} cover image">
        <a href="/tracks/{{id}}">View Tracks</a>
      </div>
    {{/each}}
  </body>
</html>
