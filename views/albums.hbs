<div class="container">
	<div class="row fluid">
		{{#each albums}}

		<div class="card">
			<img src="{{this.images.[0].url}}" class="card-img-top" alt="..." />
			<div class="card-body">
				<h5 class="card-title">{{ this.name }}</h5>
				<a href="/tracks/{{ this.id }}" class="btn btn-primary">view tracks</a>
			</div>
		</div>

		{{/each}}
	</div>
</div>