<div class="container_artists">
    <h3 class="artists_title">Album results</h3>

    <div class="artists__container">
        {{#each albums}}
        <div class="card artists__card" style="width: 18rem; height: 18rem;">
            <img src="{{images.[1].url}}" alt="cover album" style='width:150px'>
            <div class="card-body">
                <h6 class="card-title">{{name}}</h6>
                <a href="/tracks/{{id}}" class="btn btn-primary">View Tracks</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>