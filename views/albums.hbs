<!--artists.hbs-->
 <div class="cards-container">
  {{#each albums}}
        <div class="card" style="width: 12rem;">
          <img class="card-img-top" src="{{this.image}}" alt="Album image cap" height="200px">
          <div class="card-body">
            <p class="card-text" style="font-size: 0.8rem;">{{this.name}}</p>
            <p><a href="/tracks/{{this.id}}" class="btn btn-primary">View tracks</a></p>
          </div>
        </div>
  {{/each}}
</div>