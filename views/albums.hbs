<!-- albums.hbs -->

<h1>Albums</h1>

{{#if albums.length}}
  <ul>
    {{#each albums}}
      <li>
        <img src="{{images.0.url}}" alt="{{name}}" />
        <h2>{{name}}</h2>
        <a href="/tracks/{{id}}">View Tracks</a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No albums found for this artist</p>
{{/if}}