<h1>All Albums</h1>
<div class="result-wrapper">
{{#each data.body.items}}
<div class="album">
    <span class="artist-names-album">{{#each this.artists}}{{#if @first}}<p><b> {{this.name}} </b></p>
    {{else}}<p> - {{this.name}}</p>{{/if}}{{/each}}</span>
{{#each this.images}} {{#if @first}}<img src="{{this.url}}"{{/if}}{{/each}}
 alt="{{this.name}}">
    <h2>{{this.name}}</h2>
<a href="/view-tracks/{{this.id}}">View Tracks</a>
</div>
{{/each}}
</div>