<h1>Albums for: {{artist.name}}</h1> <!--{{artist.name}} NO consigo verlo, es posible? -->
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each albums as |album|}}
        <div class="card shadow-sm">
            <img src="{{album.images.1.url}}" class="card-img-top img-fluid" alt="{{album.name}}">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h5 class="card-title">{{album.name}}</h5>
                <a href="/tracks/{{album.id}}" class="btn btn-primary btn-danger">View Tracks</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
