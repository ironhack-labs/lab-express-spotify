<div class="d-flex flex-wrap">
  {{#each items}}

    <div
      class="card mb-5 me-4"
      style="width: 20rem; color:white; text-align:center"
    >
      <img src="{{images.[0].url}}" class="card-img-top" alt="artist-card" />
      <div class="card-body" style="background-color:#465252">
        <h5 class="card-title">{{name}}</h5>

        <a
          href="/tracks/{{id}}"
          class="btn btn-primary"
          style="background-color:red;"
        >View Albums</a>
      </div>
    </div>

  {{/each}}

</div>
