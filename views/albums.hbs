<div class="search-heading-orange py-5">
    <div class="container">
        <div class="heading mb-4">
            <h1 class="mb-1 display-4">Albums</h1>
            <p>Estos son los albumes del artista</p>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row mt-5">
        {{#each albums}}
            <div class="col-6 col-sm-2">
                <a href="/tracks/{{id}}" class="card mb-3">
                    <div class="card-body">
                        <img src="{{images.[0].url}}"class="img-fluid rounded mb-3" alt="">
                        <h6 class="mb-0">{{name}}</h6>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>