<div class="result-wrapper">
{{#each data.body.items}}
<div class="album">
{{#each this.images}} {{#if @first}}<img src="{{this.url}}"{{/if}}{{/each}}
 alt="{{this.name}}">
    <h1>{{this.name}}</h1>
    {{#each this.artists}}{{#if @first}}<h2>{{this.name}}</h2>
    {{else}}<h3>{{this.name}}</h3>{{/if}}{{/each}}
<a href="/view-tracks/{{this.id}}">View Tracks</a>
</div>
{{/each}}
</div>