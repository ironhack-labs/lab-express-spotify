<div class="container">
    <h1 class="text-center mt-5 mb-4">Albums</h1>
    <div class="row">
        {{#each items}}
        <div class="col-md-3">
            <div class="card text-center text-white bg-dark mb-5">
                <img class="card-img-top" src="{{images.0.url}}">
                <div class="card-body">
                    <h5 class="card-title mb-4">{{name}}</h5>
                    <a href="/tracks/{{id}}" class="btn btn-danger">View Tracks</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>