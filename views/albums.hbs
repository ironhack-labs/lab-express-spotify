<section class="result"> 
    {{#each albums}}
        <div class = 'container'>
            {{#if this.images.[1].url}}
                <img src="{{this.images.[1].url}}" alt="album-image">
            {{else if this.images.[2].url}} 
                <img src="{{this.images.[2].url}}" alt="album-image">
            {{else if this.images.[0].url}}
                <img src="{{this.images.[0].url}}" alt="album-image">
            {{else}}
                <p class = "no-image">No fancy photo here? ☹️</p>
            {{/if}}
            <h1 class ="name">{{this.name}}</h1>
            <button class ="albums-button">
                <a href="/tracks/{{this.id}}">View Tracks</a>
            </button>
        </div>
    {{/each}}
</section>