
{{#each album}}

    <div class="card" style="width: 18rem;">

        <img src="{{this.images.0.url}}" class="card-img-top" alt="{{this.name}} album cover">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <a href="/tracks/{{this.id}}" class="btn btn-primary">View Tracks</a>
        </div>

    </div>

{{/each}}