<h2>Albums of {{albums.artist}}</h2>

<div class="results">

    {{#each albums.albumArr}}
    <div class="card">    
        {{#if images}}
        <img src="{{images.0.url}}" alt="image-{{name}}" width="150px">
        {{else}}
        <img src="https://via.placeholder.com/150x150" alt="no-image-available" />
        {{/if}}        
        <h5>{{name}}</h5>
        <a href="/{{name}}/tracks/{{id}}">View tracks</a>
    </div>
    {{/each}}
</div>