<div id="navigation">
    <a href="/">Home</a>
    <h2>{{albumsPageTitle}}</h2>
</div>
<div id="artists">
{{#each arrOfArt}}
<section id="{{type}}s">
    <h3>{{name}}</h3>
    {{#ifEquals type 'track'}}
    <audio controls src="{{preview_url}}"></audio>
    {{else}}
    {{#if images.0.url}}
    <img src={{images.0.url}} />
    {{else}}
    <img src="/images/avatar.png" />
    {{/if}}
    {{#ifEquals type 'artist'}}
    <a href="/albums/{{name}}/{{id}}">View albums</a>
    {{/ifEquals}}
    {{#ifEquals type 'album'}}
    <a href="/tracks/{{id}}">View tracks</a>
    {{/ifEquals}}
    {{/ifEquals}}
</section>
{{/each}}
</div>