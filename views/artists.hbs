<h1>{{ artist }}</h1>
<div class="artists-wrapper">
    {{#each artists}}
    <div class="artist">
    <div class="artist-caption">
        <div class="artist-name">{{ this.name }}</div>
        <div class="artist-viewalbums">
            <button type="submit" onclick="location.href='/albums/{{ this.id }}'" class="btn btn-danger">
                View Albums
            </button>
        </div>
    </div>
    {{#if this.images}}
        <img class="artist-image" src="{{this.images.0.url}}" />    
    {{else}}
        <img class="artist-image" src="../images/icons8-music-album-100.png"/>
    {{/if}}
     </div>
    {{/each}}
</div>