<div class="container">
    <h1>Tracks</h1>
    <div class="row">
        {{#each tracks as |track|}}
        <div>
            <span>{{track.name}}</span>
            <div class="d-flex justify-content-end">
                <audio controls>
                    <source src="{{track.preview_url}}" type="audio/mpeg">
                </audio>
            </div>
        </div>
        {{/each}}
    </div>
</div>