<div class="container mt-4">
  <div class="">
    <h2 class="text-center">Albums for: {{artistName}}</h2>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-2">
    {{#each albums}}
      <div class="col">
        <div class="card h-80 round-0" style="">
          <img src="{{images.[0].url}}" class="card-img-fluid" alt="{{name}}">
          <div class="card-body d-flex flex-column align-items-center bg-dark-subtle2 text-light">
            <h5 class="card-title">{{name}}</h5>
            <a href="/albums/{{id}}/tracks" class="btn btn-danger">View Tracks</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>