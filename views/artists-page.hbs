<div class="container">
    <div class="row">

        {{#each artistsFromSpotify}}
        <div class="col-4">
            <div class="card p-5" style="width: 25rem;">
                <div class="card-body">
                    <p class="card-text"> <strong>name: </strong> {{name}}</p>
                    <img src="{{images.[0].url}}" alt="">
                </div>

                <button class="btn btn-dark">
                    <a href="/albums/{{id}}">View Albums</a>
                    <p>{{id}}</p>
                </button>
            </div>
        </div>
        {{/each}}



    </div>
</div>