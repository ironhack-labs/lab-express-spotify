<div class="col-md-4 col-lg-3 d-flex align-items-stretch">
  <div class="card">
    <div class="card-body d-flex flex-column align-items-baseline">
      <h3 class="card-title">{{name}}</h3>
      {{#if images.[0].url}}
        <img src="{{images.[0].url}}" alt="">
      {{else}}
        <img src="images/default-photo.jpg" alt="default image ">
      {{/if}}
      <div class="container standard-button-container d-flex justify-content-center">
        <button type="button" class="btn btn-outline-secondary standard-button"><a href="/albums/{{id}}">View albums</a></button>
      </div>
    </div>
  </div>
</div>

