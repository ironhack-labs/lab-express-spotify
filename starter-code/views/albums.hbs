<div class="artist-cards">
  {{#each  albums}}
    <div class="card" style="width: 18rem;">
      {{#each this.images}}
        {{#if @first}}
          <img src="{{this.url}}" class="card-img-top" alt="artist album">
        {{/if}}
      {{/each}}
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <a href="/album-tracks/{{this.id}}" class="btn btn-primary">View Tracks</a>
      </div>
    </div>
  {{/each}}
</div>
