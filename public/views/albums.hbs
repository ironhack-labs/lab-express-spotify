<div class="container">
  <div class="row">
    <div class="col-lg-12">
       <h1 class="album-title">{{albums.0.artists.0.name}}'s Albums</h1>
       <hr>
    </div>
   
  </div>
  <div class="row">
    {{#each albums}}
    <div class="col-lg-3 col-md-6 col-sm-12">      
        <div class="card" style="width: 18rem;">
          {{#if this.images.0.url}}
          <img
            src={{this.images.0.url}}
            alt={{this.name}}
            class="card-img-top"
          />
          {{else}}
            <img src="/images/placeholder.png" class="card-img-top" />
          {{/if}}
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <a
              href="/albums/{{this.id}}/tracks/{{this.id}}"
              class="btn btn-danger"
            >View Tracks</a>
          </div>
        </div>   
    </div>
     {{/each}}
  </div>
</div>