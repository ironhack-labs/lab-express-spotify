<div class="artist-collection">

  {{#each artists}}

    <div class="artist">

      <h2>{{name}}</h2>

      {{#if images}}
        <img src="{{images.0.url}}" alt="{{name}}" />
      {{else}}
        <img src="/images/image-unavailable.jpeg" alt="{{name}}" />
      {{/if}}

      <button><a href="/albums/{{id}}">View Albums</a></button>

    </div>

  {{/each}}

</div>